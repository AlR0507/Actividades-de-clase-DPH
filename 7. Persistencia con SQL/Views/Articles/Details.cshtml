@model Blog.Models.ArticleDetailsViewModel

<div class="article-details mb-5">
    <h1>@Model.Article.Title</h1>
    <div class="text-muted mb-3">
        By @Model.Article.AuthorName on @Model.Article.PublishedDate.ToString("MMMM dd, yyyy")
    </div>

    <div class="article-content">
        @Model.Article.Content
    </div>
</div>

<div class="comments-section">
    <h3>Comments</h3>

    <div class="mb-4">
        <form asp-action="AddComment" method="post">
            <input type="hidden" name="ArticleId" value="@Model.Article.Id" />
            <div class="mb-3">
                <label for="Content" class="form-label">Add a Comment</label>
                <textarea name="Content" class="form-control" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
    </div>

    @if (Model.Comments.Any())
    {
        <div class="comments-list">
            @foreach (var comment in Model.Comments.OrderByDescending(c => c.PublishedDate))
            {
                <div class="comment card mb-3">
                    <div class="card-body">
                        <p class="mb-1">@comment.Content</p>
                        <small class="text-muted">Posted on @comment.PublishedDate.ToString("MMM dd, yyyy HH:mm")</small>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No comments yet. Be the first to comment!</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>